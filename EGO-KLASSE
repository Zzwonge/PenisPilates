
class Ego extends Player {

	Ego (String aniName, int aniMaxFrames, String keyPattern) {
		super(aniName, aniMaxFrames, keyPattern);
	}

	void dec() {
		this.counter--;
	}

	boolean isDone() {
		return this.counter == this.aniMaxFrames;
	}

	boolean update(char key) {
		boolean updated = this.checkAndIncPatternIndex(key);

		if (updated) {
			this.dec();
			return true;
		}
		else {
			return false;
		}
	}

}
